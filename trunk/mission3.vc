void StartSewerTrap()
{
	if(!nFlags[FLAG_MISSION3_SEWER_TRAP])
	{
		//Put a locked door at the entrance to the sewer
		ManualCloseDoor(nFlags[FLAG_MISSION3_DOOR_SEWER_TRAP]);
		
		nFlags[FLAG_MISSION3_SEWER_TRAP] = 1;
		
		//now get comfortable.....while I warm up the neuro toxin
		nFlags[FLAG_MISSION3_GAS_LEVEL] = MISSION_3_GAS_TRAP_TIME/100;
		
		CreateDelayedCallback(50, "IncreaseGasLevel");
	}
}

void IncreaseGasLevel()
{
	//increment the gas flag
	if(nFlags[FLAG_MISSION3_GAS_DIRECTION] == 0)
		nFlags[FLAG_MISSION3_GAS_LEVEL]--;
	else
		nFlags[FLAG_MISSION3_GAS_LEVEL]++;
		
	int fGasTime = oF_Whole2Fixed(MISSION_3_GAS_TRAP_TIME);
	int fOneHundred = oF_Whole2Fixed(100);
	int fGasLevel = oF_Whole2Fixed(nFlags[FLAG_MISSION3_GAS_LEVEL]);
	
	nEffectLucentLucency = oF_Fixed2Int(oF_multiFF(oF_divFF(fGasLevel, oF_divFF(fGasTime, fOneHundred)), fOneHundred));
	nEffectLucentColor = RGB(128, 255, 0);

	if (nEffectLucentLucency >= 100)
	{
		FreeDelayedCallbackByFunction("IncreaseGasLevel");
	}
	else if(nEffectLucentLucency > 0)
	{
		//reinit the callback so this function happens again in 100 ticks
		if(nFlags[FLAG_MISSION3_GAS_DIRECTION] == 0)
			CreateDelayedCallback(100, "IncreaseGasLevel");
		else
			CreateDelayedCallback(10, "IncreaseGasLevel");
	}
	else
	{
		nHealth = 0;
	}
}

void StopSewerTrap()
{
	//set FLAG_MISSION3_GAS_DIRECTION to a non zero values so the gase will decrease
	nFlags[FLAG_MISSION3_GAS_DIRECTION] = 1;
}

void SpawnMiniBoss()
{
	if(nFlags[FLAG_MISSION3_DOOR_MINIBOSS_SPAWNED] == 0)
	{
		//if the player killed all the targets, spawn the mini boss
		if(Enemies[nFlags[FLAG_MISSION3_TARGET_1]].nHP <= 0 &&
			Enemies[nFlags[FLAG_MISSION3_TARGET_2]].nHP <= 0 &&
			Enemies[nFlags[FLAG_MISSION3_TARGET_3]].nHP <= 0 &&
			Enemies[nFlags[FLAG_MISSION3_TARGET_4]].nHP <= 0)
		{
			//close the door
			ManualCloseDoor(nFlags[FLAG_MISSION3_DOOR_SHOOTING_RANGE]);

			SetEntitiesPaused(1);
			
			//spawn the boss's
			CreateEnemy(161, 378, ENTITY_FACE_DOWN, ENEMY_MISSION3_BOSS, "", "guard.chr");
			CreateEnemy(163, 380, ENTITY_FACE_DOWN, ENEMY_MISSION3_BOSS, "", "guard.chr");
			
			//camera scroll over to the boss's
			cameratracking = 0;
			CameraScroll((161 * 16) - (ImageWidth(screen)/2), (378 * 16) - (ImageHeight(screen)/2), 400);
			WaitForCameraScroll();
			
			SetEntitiesPaused(0);
		
			WaitTimer(200);

			//camera scroll back to the player
			CameraScroll(Entity.x[nPlayerEnt] - (ImageWidth(screen)/2), Entity.y[nPlayerEnt] - (ImageHeight(screen)/2), 400);
			WaitForCameraScroll();
			cameratracking = 1;
			
			nFlags[FLAG_MISSION3_DOOR_MINIBOSS_SPAWNED] = 1;
			
			//lock the door
			nFlags[FLAG_MISSION3_SHOOTING_RANGE_DOOR_KEY] = 0;
		}
	}
}

void AfterEscapeDialog()
{
	if(nFlags[FLAG_MISSION3_AFTER_ESCAPE_DIALOG] == 0)
	{
		nHoldCommText = 1;
		
		CommText("Tech: Very creative.");
		CommText("Ghost: Why thank you. So...you have a plan?");
		CommText("Tech: C4.");
		CommText("Ghost: Wha?");
		CommText("Tech: C4. It'll get me out of this cell, and it'll do damage to the operation here. Go see if you can find some.");
		
		WaitForCommText();
		nHoldCommText = 0;

		nFlags[FLAG_MISSION3_AFTER_ESCAPE_DIALOG] = 1;
	}
}

